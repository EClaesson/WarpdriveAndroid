<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/publishText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/readersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>

    <ListView
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>